@model IEnumerable<Site.Models.Item>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Asus VivoBook 15</title>
    <link href="/Content/CSS/styles.css" rel="stylesheet" type="text/css" />
    <script src="JS/jquery-1.11.0.min.js"></script>
    <script src="/Content/JS/scrypts.js"></script>
</head>

<body>
    <div id="wrapper">
        <div id="header"><img src="/Content/images/Header.jpg" /></div>
        <nav class="Asus15">
            <ul>
                @foreach (var Item in Model)
                {
                    <div id="content">
                        <div id="nav">
                            <ul>
                                <li><a href="@Url.Action("Index","Home")"><img alt="Изображение" src="~/Content/images/Logo.jpg" /></a></li>
                                <li><a href="@Url.Action("Asus1","Home")">Asus VivoBook 15</a></li>
                                <li><a href="@Url.Action("Asus2","Home")">Asus VivoBook 17</a></li>
                                <li><a href="@Url.Action("Asus3","Home")">Asus VivoBook 13</a></li>
                            </ul>
                        </div>
                        <div id="main">
                            <table border="1px solid black">
                                <tr>
                                    <td id="main_title" colspan="3">
                                        <h1>@Item.Title</h1>
                                    </td>
                                </tr>
                                <tr class="big_pic">
                                    <td colspan="3"><img id="Preview" src="@Item.Preview" /></td>
                                </tr>


                            </table>
                                <p style="scrollbar-arrow-color">Abount: @Item.Description</p>
                                <p style="scrollbar-arrow-color">Price: @Item.Price</p>
                                <p style="scrollbar-arrow-color">At stock: @Item.Numbers</p>
                        </div>

                        <div class="form_block big_card">
                            <img alt="Изображение" src="/Content/images/Form.jpg" />
                            <form action="Home/Lid" method="POST">
                                <fieldset>
                                    <legend>Оформлення замовлення</legend>
                                    <input type="text" placeholder="Введіть ваше ім'я" required /><br />
                                    <input type="tel" placeholder="Введіть номер телефона в форматі 8-ххх-ххх-хххх" required patern="8-[0-9]{3}-[0-9]{3}-[0-9]{4}" /><br />
                                    <select required>
                                        <option value="Asus15">Asus VivoBook 15</option>
                                        <option value="Asus17">Asus VivoBook 17</option>
                                        <option value="Asus13">Asus VivoBook 13</option>
                                    </select><br />
                                    <input type="submit" />
                                </fieldset>
                            </form>
                        </div>


                    </div>
                }
            </ul>
        </nav>


        <div id="footer">Copyrite</div>
    </div>
</body>
</html>